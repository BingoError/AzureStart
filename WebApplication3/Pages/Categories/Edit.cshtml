@page
@model WebApplication3.Pages.Categories.delete

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Edit Category</h2>

		</div>
		<div asp-validation-summary="All"></div>

		<input asp-for = "categories.Id" class="form-control" type="hidden"/>
		<div class="mb-3">
			<label asp-for="categories.Name"></label>
			<input asp-for = "categories.Name" class="form-control"/>
			<span asp-validation-for="categories.Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="categories.DisplayOrder"></label>
			<input asp-for = "categories.DisplayOrder" class="form-control"/>
			<span asp-validation-for="categories.DisplayOrder" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
		<a asp-page="../Index"  class="btn btn-dark" >Back to List</a>

	</div>
</form>
@section Scripts{
	@{
			<partial name="_ValidationScriptsPartial"/>
	}
}
